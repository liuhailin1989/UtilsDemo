<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/btn_get_currentscreen_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取当前屏幕壁纸截图"
        />
    <TextView 
        android:id="@+id/tv_wallpaper_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截图路径"
        />
    <Button 
        android:id="@+id/btn_get_currentscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取当前屏幕截图(带图标)"
        />
    
    <TextView 
        android:id="@+id/tv_screen_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截图路径"
        />
</LinearLayout>
