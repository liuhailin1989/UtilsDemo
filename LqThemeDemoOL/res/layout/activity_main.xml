    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.lqthemedemo.MainActivity" >
<Button android:id="@+id/button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ToB_Theme_icon"/>

<Button android:id="@+id/button_forlder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ToB_Theme_iconFolder"/>

<Button android:id="@+id/button_toc_theme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ToC_Theme_icon"/>

<ImageView android:id="@+id/image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</LinearLayout>
